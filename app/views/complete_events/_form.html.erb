      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_for(:complete_event, :url => {:action => :update, :id => @event.id}) do |e| %>
