	<tr>
	  <th>Initails</th>
	  <td><%= e.text_field(:initials) %></td>
	</tr>
	<tr>
	  <th>Name</th>
	  <td><%= e.text_field(:name) %></td>
	</tr>
	<tr> 
	  <th>Event</th>
	  <td><%= e.text_field(:event_name) %></td>
	</tr>
	<tr>
	  <th>Event Description</th>
	  <td><%= e.text_area(:event_description) %></td>
	</tr>
	<tr>
	  <th>Event Comments</th>
	  <td><%= e.text_area(:comment) %></td>
	</tr>
	<tr>
	  <th>Verified ?</th>
	  <td><%= e.check_box(:admin_verify) %></td>
	</tr>
    </table>

	
