
<div class="login">
<%= form_tag do %>
        <div class="form">
	      <label for="name">Name:</label>
	      <%= text_field_tag :name, params[:name] %>
	      <label for="password">Password:</label>
	      <%= password_field_tag :password, params[:password] %>

	      <div class="button">
	        <%= submit_tag "Login" %>
	      </div>
	    </div>
<% end %>


</div>
